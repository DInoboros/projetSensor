<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.lenours.sensortracker.StepGraphFragment2">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="242dp"
        android:id="@+id/chart"
        android:orientation="vertical"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="282dp"
        android:layout_gravity="center_horizontal|bottom">

        <Spinner
            android:id="@+id/nbCourbe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="137dp"
            android:layout_above="@+id/textView3"
            android:layout_alignTop="@+id/textView2" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre de courbes :"
            android:layout_marginTop="8dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Courbe :"
            android:layout_below="@+id/textView2"
            android:layout_alignParentStart="true" />

        <Spinner
            android:id="@+id/numCourbe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/nbCourbe"
            android:layout_alignStart="@+id/nbCourbe"
            android:layout_alignTop="@+id/textView3"
            android:layout_alignBottom="@+id/textView3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier :"
            android:layout_below="@+id/textView3"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <Spinner
            android:id="@+id/modification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/numCourbe"
            android:layout_alignTop="@+id/textView4"
            android:layout_alignBottom="@+id/textView4" />

        <Spinner
            android:id="@+id/couleur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/numCourbe"
            android:layout_below="@+id/modification"
            android:layout_marginTop="10dp"

            />

        <Spinner
            android:id="@+id/donnee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/numCourbe"
            android:layout_below="@+id/modification"
            android:layout_marginTop="10dp"
            android:visibility="invisible"

            />


        <Button
            android:id="@+id/valider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/donnee"
            android:text="Appiquer" />
    </RelativeLayout>


</FrameLayout>
